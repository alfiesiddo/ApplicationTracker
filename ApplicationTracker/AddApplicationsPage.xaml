<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApplicationTracker.AddApplicationsPage"
             Title="">
    <VerticalStackLayout Spacing="10" Padding="20">

        <Label Grid.Row="0"
       Text="Add Application"
       FontSize="Large"
       FontAttributes="Bold"
       HorizontalOptions="Center" 
       Margin="0,0,0,10"/>

        <Label 
            Text="Company Name:" />
        <Entry Placeholder="e.g. Microsoft" x:Name="companyName" />

        <Label 
            Text="Salary:" />
        <Entry Placeholder="e.g. Â£120,000" x:Name="salary" Keyboard="Numeric" />

        <Label 
            Text="Location:" />
        <Entry Placeholder="e.g. Manchester" x:Name="location" />

        <Label 
            Text="Role:" />
        <Entry Placeholder="e.g. Software Engineer" x:Name="role" />
        
        <Button Text="Add Application" 
                Clicked="AddApplicationButtonPressed" 
                Margin="0,20,0,0"/>

    </VerticalStackLayout>
</ContentPage>