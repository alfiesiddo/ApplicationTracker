<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApplicationTracker.AddApplicationsPage"
             Title="AddApplicationsPage">
    <VerticalStackLayout>
        <Label 
            Text="Company Name:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="CompanyName" x:Name="companyName" VerticalOptions="Center"  />

        <Label 
            Text="Salary:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Salary" x:Name="salary"  VerticalOptions="Center" />
        
        <Label 
            Text="Location:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Location" x:Name="location" VerticalOptions="Center"  />
        
        <Label 
            Text="Role:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Role" x:Name="role" VerticalOptions="Center"  />
        <Button Text="Add Application" Clicked="AddApplicationButtonPressed"></Button>

    </VerticalStackLayout>
</ContentPage>